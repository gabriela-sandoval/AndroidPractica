<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Juego">

    <ProgressBar
        android:id="@+id/progressBarJugador"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="339dp"
        android:layout_height="18dp"
        android:layout_marginBottom="60dp"
        android:indeterminate="false"
        android:indeterminateOnly="false"
        android:indeterminateTint="#00BCD4"
        android:max="100"
        android:progress="100"
        android:progressTint="#00BCD4"
        app:layout_constraintBottom_toTopOf="@+id/monstruoTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progressBarMonstruo"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="339dp"
        android:layout_height="18dp"
        android:layout_marginBottom="100dp"
        android:indeterminate="false"
        android:indeterminateOnly="false"
        android:indeterminateTint="#00BCD4"
        android:max="100"
        android:progress="100"
        android:progressTint="#00BCD4"
        app:layout_constraintBottom_toTopOf="@+id/buttonAtacar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonAtacar"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:backgroundTint="#F44336"
        android:text="Atacar"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/buttonCurar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonCurar"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:backgroundTint="#0DC815"
        android:text="Curar"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/buttonRendirse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonRendirse"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginBottom="132dp"
        android:backgroundTint="#56101210"
        android:text="RENDIRSE"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/nombreTextView"
        android:layout_width="185dp"
        android:layout_height="26dp"
        android:layout_marginTop="116dp"
        android:layout_marginBottom="32dp"
        android:autoText="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/progressBarJugador"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/monstruoTextView"
        android:layout_width="185dp"
        android:layout_height="26dp"
        android:layout_marginBottom="28dp"
        android:autoText="false"
        android:text="Monstruo"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/progressBarMonstruo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/monstruoTextView2"
        android:layout_width="185dp"
        android:layout_height="26dp"
        android:layout_marginBottom="28dp"
        android:autoText="false"
        android:text="Monstruo"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/progressBarMonstruo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonAtacar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBarMonstruo"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textViewProgresoJugador"
        android:layout_width="53dp"
        android:layout_height="18dp"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/monstruoTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreTextView"
        app:layout_constraintVertical_bias="0.347" />

    <TextView
        android:id="@+id/textViewProgresoMonstruo"
        android:layout_width="53dp"
        android:layout_height="18dp"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewResultado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monstruoTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>